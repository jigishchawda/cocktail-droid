<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cocktail.droid.cocktail_assassin.activities.DrinkDetailActivity">

    <ImageView
        android:id="@+id/drink_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@android:drawable/sym_def_app_icon"
        />

    <TextView
        android:id="@+id/drink_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/drink_image"
        android:textSize="20sp"
        />

    <!--<com.gc.materialdesign.views.Slider-->
        <!--android:id="@+id/slider"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#1E88E5"-->
        <!--android:layout_below="@+id/drink_name"-->
        <!--materialdesign:max="50"-->
        <!--materialdesign:min="0"-->
        <!--materialdesign:showNumberIndicator="true"/>-->

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/value"
        android:layout_below="@+id/drink_name"
        android:text="0"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/slider"
        android:layout_below="@+id/drink_name"
        android:layout_toRightOf="@+id/value"
        android:max="50"
        />

</RelativeLayout>
